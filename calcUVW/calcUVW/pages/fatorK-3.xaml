<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="calcUVW.pages.fatorK_3"
             xmlns:pancake="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView">
   
    <ContentPage.ToolbarItems>
        <ToolbarItem IconImageSource="ajuda.png" Clicked="ToolbarItem_Clicked"/>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
                <StackLayout Padding="20, 10">
                    <Label x:Name="lblCompBlank"
				        FontFamily="Arial"
				        FontSize="18"
				        Text="Comprimento da peça:"
                       Padding="0, 10"
                    />
                    <pancake:PancakeView CornerRadius="24" Padding="5">
                        <Entry x:Name="entCompBlank"
                        FontFamily="Arial"
                        FontSize="20"
                        Keyboard="Numeric"
                        Placeholder="0"
                        MaxLength="7"
                        ClearButtonVisibility="WhileEditing"
                        ReturnType="Next"
			        />
                    </pancake:PancakeView>
                    <Label x:Name="lblAltA"
				        FontFamily="Arial"
				        FontSize="18"
				        Text="Altura do lado A:"    
                        Padding="0, 10"
                    />
                    <pancake:PancakeView CornerRadius="24" Padding="5">
                        <Entry x:Name="entAltA"
                        FontFamily="Arial"
                        FontSize="20"
                        Keyboard="Numeric"
                        Placeholder="0"
                        MaxLength="7"
                        ClearButtonVisibility="WhileEditing"
                        ReturnType="Next"
			        />
                    </pancake:PancakeView>
                    <Label x:Name="lblAltB"
				        FontFamily="Arial"
				        FontSize="18"
				        Text="Altura do lado B:"    
                       Padding="0, 10"
                    />
                    <pancake:PancakeView CornerRadius="24" Padding="5">
                        <Entry x:Name="entAltB"
                        FontFamily="Arial"
                        FontSize="20"
                        Keyboard="Numeric"
                        Placeholder="0"
                        MaxLength="7"
                        ClearButtonVisibility="WhileEditing"
                        ReturnType="Next"
			        />
                    </pancake:PancakeView>
                    <Label x:Name="lblRaioDobra"
				        FontFamily="Arial"
				        FontSize="18"
				        Text="Raio da dobra:"    
                        Padding="0, 10"
                    />
                    <pancake:PancakeView CornerRadius="24" Padding="5">
                        <Entry x:Name="entRaioDobra"
                        FontFamily="Arial"
                        FontSize="20"
                        Keyboard="Numeric"
                        Placeholder="0"
                        MaxLength="7"
                        ClearButtonVisibility="WhileEditing"
                        ReturnType="Next"
			        />
                    </pancake:PancakeView>
                    <Grid Padding="0, 10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <Label x:Name="lblAng1"
				        FontFamily="Arial"
				        FontSize="18"
				        Text="Ângulo 1:"    
                        Padding="0, 24"
                        Grid.Row="0"
                        Grid.Column="0"
                    />
                        <pancake:PancakeView CornerRadius="24" Padding="5" Grid.Row="0" Grid.Column="1" Margin="4, 10">
                            <Entry x:Name="entAng1"
                        FontFamily="Arial"
                        FontSize="18"
                        Keyboard="Numeric"
                        Placeholder="0"
                        MaxLength="5"
                        ClearButtonVisibility="WhileEditing"
                        ReturnType="Next"
			        />
                        </pancake:PancakeView>
                        <Label x:Name="lblAng2"
				        FontFamily="Arial"
				        FontSize="18"
				        Text="Ângulo 2:"    
                        Padding="0, 24"
                        Grid.Row="0"
                        Grid.Column="2"
                    />
                        <pancake:PancakeView CornerRadius="24" Padding="5" Grid.Row="0" Grid.Column="3" Margin="4, 10">
                            <Entry x:Name="entAng2"
                        FontFamily="Arial"
                        FontSize="18"
                        Keyboard="Numeric"
                        Placeholder="0"
                        MaxLength="5"
                        ClearButtonVisibility="WhileEditing"
                        ReturnType="Next"
			        />
                        </pancake:PancakeView>
                        <Label x:Name="lblFatorK"
                        Grid.Column="0"
                        Grid.Row="1"
                        FontFamily="Arial"
                        VerticalOptions="Center"
                        Padding="0, 16"
			            FontSize="18"
                        Text="Fator K:"
                    />
                        <pancake:PancakeView Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="3" CornerRadius="24">
                            <Label x:Name="resultFatorK"
                            FontFamily="Arial"
                            FontSize="24"
                            Text=""
                            VerticalOptions="Center"
                            Padding="16"
                            BackgroundColor="{AppThemeBinding Dark={StaticResource EntryBackgroundColorDark}, Light={StaticResource EntryBackgroundColorLight}}"
                        />
                        </pancake:PancakeView>
                    </Grid>

                </StackLayout>
                <Button x:Name="btnCalcular"
			    CornerRadius="20"
                Text="Calcular"
                FontSize="24"
                FontFamily="Arial"
                FontAttributes="Bold"
                BorderWidth="2"
                VerticalOptions="EndAndExpand"
                Padding="20"
                Margin="10, -20, 10, 10"
                Clicked="Calcular_Clicked"
            />
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>